@using Microsoft.AspNetCore.Identity
@using BADCIrrigationEquipmentSurvey.Models

@inject SignInManager<BadcAppUser> SignInManager
@inject UserManager<BadcAppUser> UserManager

@if (SignInManager.IsSignedIn(User))
{
    <form asp-area="Identity" asp-page="/Account/Logout" asp-route-returnUrl="@Url.Action("Index", "Home", new { area = "" })" method="post" id="logoutForm" class="navbar-right">
        <ul class="nav navbar-nav navbar-right navbar-login">
            <li>
                <a asp-area="Identity" asp-page="/Account/Manage/Index" title="Manage">Welcome: @UserManager.GetUserName(User) !</a>
            </li>
            <li>
                <button type="submit" class="btn btn-link navbar-btn navbar-link">Logout</button>
            </li>
        </ul>
    </form>
}
else
{
    <ul class="nav navbar-nav navbar-right navbar-login">
        <li><a asp-area="Identity" asp-page="/Account/Register">Register</a></li>
        <li><a asp-area="Identity" asp-page="/Account/Login">Login</a></li>
    </ul>
}




