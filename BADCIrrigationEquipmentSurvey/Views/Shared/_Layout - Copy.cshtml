                            <li><a asp-area="" asp-controller="Home" asp-action="DataMap">Map View</a></li>

                            <li class="dropdown dropdown-submenu">
                                <a href="#" class="dropdown-toggle" data-toggle="dropdown">
                                    Data View <i class="fas fa-caret-down caret-down"></i><i class="sr-only caret"></i>
                                </a>
                                <ul class="dropdown-menu animated-down">
                                    <li><a asp-area="" asp-controller="LowLiftPumpInfoes" asp-action="Index">Low Lift Pump</a></li>
                                    <li><a asp-area="" asp-controller="DeepTubewellInfoes" asp-action="Index">Deep Tubewell</a></li>
                                    <li><a asp-area="" asp-controller="ShallowTubewellInfoes" asp-action="Index">Shallow Tubewell</a></li>
                                </ul>
                            </li>
                        </ul>
                    </li>

