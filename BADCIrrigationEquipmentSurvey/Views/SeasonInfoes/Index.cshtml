@model IEnumerable<BADCIrrigationEquipmentSurvey.Models.DataModels.SeasonInfo>

@{
    ViewData["Title"] = "Index";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h2>Cropping Seasons</h2>

<p>
    <a asp-action="Create">Add a New Cropping Season</a>
</p>

<table class="table">
    <thead>
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.SeasonId)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.SeasonName)
            </th>
            <th>Actions</th>
        </tr>
    </thead>

    <tbody>
        @foreach (var item in Model)
        {
            <tr>
                <td>
                    @Html.DisplayFor(modelItem => item.SeasonId)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.SeasonName)
                </td>
                <td>
                    <a asp-action="Edit" asp-route-id="@item.SeasonId">Edit</a> |
                    <a asp-action="Details" asp-route-id="@item.SeasonId">Details</a> |
                    <a asp-action="Delete" asp-route-id="@item.SeasonId">Delete</a>
                </td>
            </tr>
        }
    </tbody>
</table>
